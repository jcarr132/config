## wm-independent bindings

# launch terminal
super + Return
  alacritty

# launch emacs
super + shift + Return
  ec

# launch firefox
super + shift + w
  firefox

# launch programs with dmenu
super + space
  dmen

# open logout/shutdown/suspend menu
super + Escape
  dmenu_logout

# lock screen with betterlockscreen
super + shift + x
  betterlockscreen -l dim

# reset wal colours (useful for some terminal apps e.g., neomutt, ncspot, emacs -nw)
super + w
  wal -R

# open enpass
super + bar
  /opt/enpass/Enpass showassistant

# volume and media controls
XF86AudioRaiseVolume
  amixer -D pulse sset "Master" 5%+
XF86AudioLowerVolume
  amixer -D pulse sset "Master" 5%-
XF86AudioMute
  amixer -D pulse sset "Master" toggle
XF86AudioPlay
  playerctl play-pause
XF86AudioStop
  playerctl stop
XF86AudioNext
  playerctl next
XF86AudioPrev
  playerctl previous

# screen brightness controls
XF86MonBrightnessUp
  light -A 10
XF86MonBrightnessDown
  light -U 10


## bspwm & sxhkd bindings

# make sxhkd reload its configuration files:
super + alt + shift + r
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
  bspc desktop -l next

# Flip layout vertically/horizontally
super + {_,shift + }e
	bspc node @/ --flip {vertical,horizontal}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

##
# Navigation
##

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# rotate windows
super + {_,shift + }r
  bspc node @/ -R {90, -90}

# expand a window by moving one of its sides outward
super + alt + {h,j,k,l}
    bspc node -z {left -100 0,bottom 0 100,top 0 -100,right 100 0}

# contract a window by moving one of its sides inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -100 0,top 0 100,bottom 0 -100,left 100 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
